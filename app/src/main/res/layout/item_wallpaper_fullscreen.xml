                android:text="@string/wallpaper_title"
                android:textColor="@android:color/white"
                android:textSize="28sp"
                android:textStyle="bold"
                android:shadowColor="#000000"
                android:shadowDx="0"
                android:shadowDy="2"
                android:shadowRadius="8"/>

